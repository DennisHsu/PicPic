<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Input Text:" />

    <EditText
        android:id="@+id/Edit_Field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:textSize="20sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Select Color:" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DCDCDC"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/limegreen_btn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="#32CD32"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/mediumblue_btn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="#0000CD"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/forestgreen_btn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="#228B22"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/white_btn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="#FFFFFF"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/black_btn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="#000000"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/darkviolet_btn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="#9400D3"
                        android:clickable="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/deeppink_btn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="#FF1493"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/royalblue_btn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="#4169E1"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/yellow_btn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="#FFFF00"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/gray_btn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="#808080"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/red_btn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="#FF0000"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/orangered_btn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="#FF4500"
                        android:clickable="true" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
